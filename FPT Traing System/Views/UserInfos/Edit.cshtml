@model FPT_Traing_System.Models.UserInfo
@{
	ViewBag.Title = "Edit";
}

<h2>Edit My User Information</h2>

<div class="form-group">
	@Html.ActionLink("Back to Course", "Index", "Courses", null, new { @class = "btn btn-primary" })
</div>

@using (Html.BeginForm("Edit", "UserInfos", FormMethod.Post))
{
	@Html.HiddenFor(m => m.UserId)
	<div class="form-group">
		@Html.LabelFor(m => m.FullName)
		@Html.EditorFor(m => m.FullName, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger" })

	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Phone)
		@Html.EditorFor(m => m.Phone, new { htmlAttributes = new { @class = "form-control" } })
		@Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })


	</div>


	<div class="form-group">
		<button type="submit" class="btn btn-primary">Edit</button>
	</div>
}