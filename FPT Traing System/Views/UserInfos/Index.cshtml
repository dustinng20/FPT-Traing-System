@model FPT_Traing_System.Models.UserInfo
@{
	ViewBag.Title = "Index";
}

<h2>My User Information</h2>

<div class="panel panel-info">
	<div class="panel-body">
		<b>Full Name: @Model.FullName</b>
		<br/>
		<b>Phone: @Model.Phone</b>
	</div>
</div>

<div class="form-group">
	@Html.ActionLink("Edit Info", "Edit", null, new { @class = "btn btn-info" })
	@Html.ActionLink("Change Password", "ChangePassword", "Manage", null, new { @class = "btn btn-danger" })

</div>



