@model FPT_Traing_System.Models.Course

@{
	ViewBag.Title = "Create";
}

<h2>Create Course</h2>

<div class="form-group">
	@Html.ActionLink("Back to Course", "Index", "Courses", null, new { @class = "btn btn-primary" })
</div>

@using (Html.BeginForm("Create", "Courses", FormMethod.Post))
{
	<div class="form-group">
		@Html.LabelFor(m => m.Name)
		@Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Name of Course" })
		@Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Category)
		@Html.TextBoxFor(m => m.Category, new { @class = "form-control", @placeholder = "Category of Course" })
		@Html.ValidationMessageFor(m => m.Category, "", new { @class = "text-danger" })

	</div>

	<div class="form-group">
		@Html.LabelFor(m => m.Description)
		@Html.TextBoxFor(m => m.Description, new { @class = "form-control", @placeholder = "Description of Course" })
		@Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })

	</div>

	<div class="form-group">S
		<button type="submit" class="btn btn-primary">Create</button>
	</div>

}